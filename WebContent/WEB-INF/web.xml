<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>IRMA_RT_EDIT</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/cxf.xml</param-value>
  </context-param>
  <listener>
    <listener-class> 
    		org.springframework.web.context.ContextLoaderListener 
  		 </listener-class>
  </listener>
  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <servlet-class>
    	org.apache.cxf.transport.servlet.CXFServlet 
   	</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>CXFServlet</servlet-name>
    <url-pattern>/IRMA_RT_EDIT/service/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>VerifyAccountServlet</servlet-name>
    <servlet-class>irma.rt.edit.servlet.VerifyAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VerifyAccountServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>irma.rt.edit.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>GtfsExportServlet</servlet-name>
    <servlet-class>irma.rt.edit.servlet.GtfsExportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GtfsExportServlet</servlet-name>
    <url-pattern>/export</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>SecurityServlet</filter-name>
    <filter-class>irma.rt.edit.servlet.SecurityServlet</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityServlet</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
</web-app>